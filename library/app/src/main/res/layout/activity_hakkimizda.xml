<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Hakkimizda">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/hgeri"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/carpim"
            android:layout_marginTop="7dp"></ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hakkımızda"
            android:textColor="#922B21 "
            android:textSize="25dp"
            android:textStyle="italic"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Sözleşmesi"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#0C0C0C"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gizlilik Politikası"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#0C0C0C"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hakkında"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:textColor="#0C0C0C"></TextView>


</LinearLayout>